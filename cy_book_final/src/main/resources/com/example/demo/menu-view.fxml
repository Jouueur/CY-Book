<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootVBox" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.MenuController">
    <children>
        <HBox fx:id="topBox" prefHeight="51.0" prefWidth="798.0" styleClass="top-box" alignment="CENTER">
            <children>
                <Label fx:id="topBoxTitle" text="Library Software Menu" styleClass="top-box-title" />
            </children>
        </HBox>
        <HBox fx:id="mainBox" prefHeight="559.0" prefWidth="798.0" spacing="10">
            <children>
                <VBox fx:id="leftBox" spacing="10" styleClass="left-box">
                    <children>
                        <Button fx:id="buttonUserConsult" onAction="#onUserConsultButtonClick" text="User Consult" />
                        <Button fx:id="buttonOverdueBook" onAction="#onOverdueBookButtonClick" text="Statistics" />
                        <Button fx:id="buttonSearchBook" onAction="#onSearchBookButtonClick" text="Search Book" />
                    </children>
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                </VBox>
                <VBox fx:id="rightBox" styleClass="right-box">
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
