<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cybookfx.MenuController">

    <children>
        <Button fx:id="buttonOverdueBook" text="1. Consult user account" onAction="#onOverdueBookButtonClick" />
        <Button fx:id="buttonMenu" text="2. Search a book" onAction="#onMenuButtonClick" />
        <Button fx:id="buttonNew" text="3. Overdue book list" onAction="#onNewButtonClick" />
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</VBox>
