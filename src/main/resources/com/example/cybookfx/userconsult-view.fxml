<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>


<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<VBox fx:id="rootVBox" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cybookfx.UserConsultController">
    <children>
        <HBox fx:id="topBox" prefHeight="51.0" prefWidth="798.0" styleClass="top-box" alignment="CENTER">
            <children>
                <!-- Bouton avec une image -->
                <Button fx:id="backButton" onAction="#handleBackButton" styleClass="backButton">
                    <graphic>
                        <ImageView fitWidth="50" fitHeight="50">
                            <image>
                                <Image url="@homeIcon.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Label fx:id="topBoxTitle" text="Consult users" styleClass="top-box-title" />
            </children>
        </HBox>
        <HBox fx:id="mainBox" prefHeight="559.0" prefWidth="798.0" spacing="10">
            <children>
                <VBox fx:id="leftBox" spacing="10" styleClass="left-box">
                    <children>
                        <Button fx:id="buttonBookLoan" text="New Book Loan" onAction="#openBookLoan" />
                        <Button fx:id="buttonAddUser" text="Add user" onAction="#openAddUser" />
                    </children>
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                </VBox>
                <VBox fx:id="rightBox" styleClass="right-box">
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
